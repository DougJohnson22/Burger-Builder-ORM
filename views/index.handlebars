<div class="container">


  <div class="row">
    <h1 class="display-1 text-center">Build a Burger!</h1>
  </div>


  <div class="row position-absolute top-50 start-50 translate-middle-x"">


    <ul class=" col-4">
    {{#each burgers}}
    {{#unless devour}}
    {{> burgers/burger-block devour=true}}
    {{/unless}}
    {{/each}}
    </ul>

    <div class="col-4">
      <h2>Add a Burger</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="ca">Burger Name:</label>
          <input type="text" id="ca" name="name">
        </div>

        <div class="form-group">
          <label for="devour">Hungry?</label><br>
          <input type="radio" name="devour" value="1" checked> Add Now!<br>
          <input type="radio" name="devour" value="0"> Eat Now!
        </div>

        <button type="submit">Add Burger</button>
      </form>
    </div>

    <ul class="col-4">
      {{#each burgers}}
      {{#if devour}}
      {{> burgers/burger-block devour=false}}
      {{/if}}
      {{/each}}
    </ul>

  </div>

</div>